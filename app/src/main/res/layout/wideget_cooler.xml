<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MyApplication.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widget_rd_16"
    android:theme="@style/Theme.MyApplication.AppWidgetContainer">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cooler_widget_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cpu_temp"
            style="@style/tv_rubik_16_500_green_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37Â°C" />

        <TextView
            android:id="@+id/tv_temp"
            style="@style/tv_rubik_11_400_green_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" High temperature" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cooler"
        style="@style/tv_rubik_10_600_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_blue_04_rd_20"
        android:paddingHorizontal="26dp"
        android:paddingVertical="8dp"
        android:text="COOLER" />
</LinearLayout>