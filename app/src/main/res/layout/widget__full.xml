<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MyApplication.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_widget_full"
    android:orientation="vertical"
    android:theme="@style/Theme.MyApplication.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/lnl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            style="@style/tv_rubik_30_700_green_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:text="10:38" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/tv_rubik_14_400_green_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:text="May 18, 2022" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnl_1"
        android:layout_marginHorizontal="33dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_phone_boot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_boot_widget_icon" />

            <TextView
                android:id="@+id/tv_ram_uesed"
                style="@style/tv_rubik_11_400_green_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="45% RAM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_clean_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clean_up_widget_icon" />

            <TextView
                android:id="@+id/tv_junk_file"
                style="@style/tv_rubik_11_400_green_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="234,58 MB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_battery_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/battery_save_wiget_icon" />

            <TextView
                android:id="@+id/tv_battery_percent"
                style="@style/tv_rubik_11_400_green_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="80%" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>