<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingLeft="32dp"
            android:paddingRight="10dp"
            android:src="@drawable/back_arrow_white" />

        <TextView
            style="@style/tv_rubik_18_600_green_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:text="@string/Battery_Saver" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/battery_saver_scan" />

    <TextView
        android:id="@+id/tv_scan"
        style="@style/tv_rubik_16_500_green_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/Scanning" />

    <TextView
        android:id="@+id/tv"
        style="@style/tv_rubik_32_700_green_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="70%" />

    <LinearLayout
        android:id="@+id/ads_banner"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="4dp"
        android:background="@color/grey"
        android:orientation="horizontal"
  />

</LinearLayout>