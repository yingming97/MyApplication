<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp"
            android:paddingVertical="20dp"
            android:src="@drawable/back_arrow_white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/finish" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/tv_rubik_16_600_green_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/Progress_Complete" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/tv_rubik_12_400_green_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineHeight="19.2dp"

                    android:paddingHorizontal="65dp"
                    android:text="@string/Countinue" />

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/bg_blue_6_rd_12"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tv_rubik_14_600_green_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="21dp"
                        android:text="@string/Battery_Informations" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="24dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/temperature" />

                        <TextView
                            style="@style/tv_rubik_11_500_green_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_weight="1"
                            android:paddingVertical="16dp"
                            android:text="@string/Temperature" />

                        <TextView
                            android:id="@+id/tv_temperature"
                            style="@style/tv_rubik_13_500_green_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="37Â°C" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="23dp"
                        android:background="@color/green_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/voltage" />

                        <TextView
                            style="@style/tv_rubik_11_500_green_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_weight="1"
                            android:paddingVertical="16dp"
                            android:text="@string/Voltage" />

                        <TextView
                            android:id="@+id/tv_vol"
                            style="@style/tv_rubik_13_500_green_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.888V" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="23dp"
                        android:background="@color/green_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/capacity" />

                        <TextView
                            style="@style/tv_rubik_11_500_green_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_weight="1"
                            android:paddingVertical="16dp"
                            android:text="@string/Capacity" />

                        <TextView
                            android:id="@+id/tv_cap"
                            style="@style/tv_rubik_13_500_green_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2695mAH" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_blue_6_rd_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:layout_marginLeft="14.16dp"
                        android:src="@drawable/deep_clean" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="55dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tv_rubik_14_600_green_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Deep_Clean" />

                        <TextView
                            android:id="@+id/tv_junk_size"
                            style="@style/tv_rubik_12_400_white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:text="314,4 Junk Files" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_deep_clean"
                        style="@style/tv_rubik_12_500_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/bg_blue_04_rd_20"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="9dp"
                        android:text="@string/Clean_up" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="16.52dp"
                    android:background="@drawable/bg_blue_6_rd_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:layout_marginLeft="14.16dp"
                        android:background="@null"
                        android:src="@drawable/cpu_cooler" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="55dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tv_rubik_14_600_green_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Phone_Booster" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_temp"
                                style="@style/tv_rubik_12_400_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="37,8 C" />

                            <TextView
                                android:id="@+id/tv_battery_health"
                                style="@style/tv_rubik_12_400_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - Good" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_boot_phone"
                        style="@style/tv_rubik_12_500_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/bg_blue_04_rd_20"
                        android:paddingHorizontal="17dp"
                        android:paddingVertical="9dp"
                        android:text="@string/Speed_Up" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/grey"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_blue_6_rd_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:layout_marginLeft="14.16dp"
                        android:src="@drawable/cpu_cooler" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="55dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tv_rubik_14_600_green_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/CPU_Cooler" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_temp_1"
                                style="@style/tv_rubik_12_400_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="37,8 C" />

                            <TextView
                                android:id="@+id/tv_battery_health_1"
                                style="@style/tv_rubik_12_400_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - Good" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_cool_down"
                        style="@style/tv_rubik_12_500_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/bg_blue_04_rd_20"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="9dp"
                        android:text="@string/Cool_Down" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>

